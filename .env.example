# Environment settings
ENV_MODE=development

# Application settings
APP_NAME="LangGraph Playground"
DEBUG=False
API_DEBUG=False
API_TITLE="LangGraph Playground API"
API_VERSION="0.1.0"

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Azure OpenAI settings (required)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_GPT4O_DEPLOYMENT=your-gpt4o-deployment-name
AZURE_OPENAI_GPT4O_MINI_DEPLOYMENT=your-gpt4o-mini-deployment-name

# Standard OpenAI settings (optional, for non-Azure use)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=

# LangSmith settings (optional, for observability)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=lg-playground
LANGCHAIN_TRACING_V2=false